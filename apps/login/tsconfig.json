{
  "extends": "@zitadel/tsconfig/nextjs.json",
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es2022",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@kernel/ui/*": ["../../../packages/ui/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "custom-config.js"
  ],
  "exclude": ["node_modules"]
}
